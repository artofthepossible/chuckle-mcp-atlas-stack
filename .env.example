# ============================================
# Server Configuration
# ============================================
PORT=3001
NODE_ENV=production

# ============================================
# MongoDB Configuration (Local)
# ============================================
# Full connection URI (preferred method)
MONGODB_URI=mongodb://mongodb:27017/docker-chuckles-dev

# Alternative: Individual connection parameters
MONGODB_HOST=mongodb
MONGODB_PORT=27017
MONGODB_DB=docker-chuckles-dev

# Database and collection names
MONGODB_DATABASE=docker-chuckles-dev
MONGODB_COLLECTION=jokes

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379

# Cache TTL in seconds (default: 300 = 5 minutes)
REDIS_CACHE_TTL=300

# ============================================
# Application Features
# ============================================
# Auto-seed database on startup (set to false to disable)
AUTO_SEED=true

# ============================================
# AWS Configuration (for Atlas deployments)
# ============================================
AWS_REGION=us-east-2

# ============================================
# Notes for Local Development
# ============================================
# This file is for LOCAL development with docker-compose.yml
# 
# For MongoDB Atlas deployment, use .env.atlas instead:
#   cp .env.atlas.template .env.atlas
#   docker compose -f compose.atlas.mcp.yaml --env-file .env.atlas up
#
# Environment variables are read in this order:
# 1. .env file (or --env-file specified file)
# 2. docker-compose.yml environment section
# 3. Default values in server.js CONFIG object
